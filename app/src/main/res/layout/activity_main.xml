<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="true"
    android:onClick="openSpotifyStreamer">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spotify_button"
        android:id="@+id/spotify_button"
        android:onClick="openApplication"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores_button"
        android:id="@+id/scores_button"
        android:onClick="openApplication"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spotify_button"
        android:layout_alignLeft="@+id/spotify_button"
        android:layout_alignStart="@+id/spotify_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_button"
        android:id="@+id/library_button"
        android:onClick="openApplication"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/scores_button"
        android:layout_alignLeft="@+id/scores_button"
        android:layout_alignStart="@+id/scores_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/build_button"
        android:id="@+id/build_button"
        android:onClick="openApplication"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/library_button"
        android:layout_alignLeft="@+id/library_button"
        android:layout_alignStart="@+id/library_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz_button"
        android:id="@+id/xyz_button"
        android:onClick="openApplication"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/build_button"
        android:layout_alignLeft="@+id/build_button"
        android:layout_alignStart="@+id/build_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_button"
        android:id="@+id/capstone_button"
        android:onClick="openApplication"
        android:background="#F08C35"
        android:minWidth="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/xyz_button"
        android:layout_alignLeft="@+id/xyz_button"
        android:layout_alignStart="@+id/xyz_button" />

</RelativeLayout>
